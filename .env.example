# Server Configuration
PORT=3000
NODE_ENV=development

# ChargeHive Supabase Configuration (Single Database for all tables)
# Database name: chargehive
# Contains tables: providers, users, services
CHARGEHIVE_SUPABASE_URL=your_chargehive_supabase_url
CHARGEHIVE_SUPABASE_ANON_KEY=your_chargehive_supabase_anon_key
CHARGEHIVE_SUPABASE_SERVICE_ROLE_KEY=your_chargehive_supabase_service_role_key

# JWT Configuration
# Get this from Supabase Dashboard → Project Settings → API → JWT Secret
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here
# Fallback JWT secret (optional, for custom tokens)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Frontend URL (for password reset redirect)
FRONTEND_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Flow Blockchain Configuration (Testnet)
FLOW_ACCESS_NODE=https://rest-testnet.onflow.org
FLOW_SERVICE_ACCOUNT_ADDRESS=your_service_account_address
FLOW_SERVICE_ACCOUNT_PRIVATE_KEY=your_service_account_private_key
# Generate a 64-character hex string (32 bytes) for encryption: openssl rand -hex 32
FLOW_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here
